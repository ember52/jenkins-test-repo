pipeline {
     agent any

        stage('test') {
            when {
                expression{
                    params.test-success == true 
                }
            }
            steps {
                echo "this is the testing stage" 
            }
        }
        
        stage('deployment') {  
            steps {
                echo "this is the deployment stage"
                echo "this build number $BUILD_NUMBER"
            }
        }    
    }

